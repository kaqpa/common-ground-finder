{
  "manifest_version": 3,
  "name": "Letterboxd Movies in Common",
  "version": "1.0.0",
  "description": "See which movies you and another Letterboxd user have both watched or added to your watchlist",
  "permissions": [],
  "host_permissions": [
    "https://letterboxd.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://letterboxd.com/*"],
      "js": ["src/extension/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/extension/icons/icon16.png",
    "48": "src/extension/icons/icon48.png",
    "128": "src/extension/icons/icon128.png"
  }
}
